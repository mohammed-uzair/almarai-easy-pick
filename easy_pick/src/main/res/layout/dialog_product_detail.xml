<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <include
            android:id="@+id/included_partial_product_header_detail_pop_up"
            layout="@layout/main_product_header_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/included_partial_product_extra_detail_pop_up"
            layout="@layout/main_product_extra_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/included_partial_product_header_detail_pop_up"
            app:layout_constraintStart_toStartOf="@+id/included_partial_product_header_detail_pop_up"
            app:layout_constraintTop_toBottomOf="@+id/included_partial_product_header_detail_pop_up" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>