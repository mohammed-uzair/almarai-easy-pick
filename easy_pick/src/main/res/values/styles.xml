<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--region Text View Styles-->
    <style name="PrimaryTextStyle" parent="android:Widget.Material.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>
    <!--endregion-->

    <!--region Edit Text Style-->
    <style name="EditTextStyle" parent="android:Widget.Material.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:drawablePadding">@dimen/_16sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textColorHint">?attr/colorText</item>
    </style>
    <!--endregion-->

    <!--region Button Styles-->
    <style name="PrimaryButtonStyle" parent="android:Widget.Material.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:elevation">@dimen/_8sdp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_70sdp</item>
        <item name="android:paddingEnd">@dimen/_70sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:translationZ">@dimen/_5sdp</item>
    </style>

    <style name="HomeButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/home_button</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <!--endregion-->

    <!--region Appbar Style-->
    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorToolbar</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>
    <!--endregion-->

    <!--region Grid Style-->
    <style name="AlmGridItemsTextView" parent="android:Widget.Material.TextView">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:width">0dp</item>K
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="AlmGridTitleTextView" parent="AlmGridItemsTextView">
        <item name="android:textColor">?colorListHeaderTitle</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?colorListHeaderBackground</item>
    </style>
    <!--endregion-->
</resources>