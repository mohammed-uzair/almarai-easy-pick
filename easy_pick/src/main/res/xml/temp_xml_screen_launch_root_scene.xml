<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@+id/screen_launch_guideline_for_background_image"
                motion:framePosition="50"
                motion:percentX="1"
                motion:percentY="1" />
            <KeyAttribute
                motion:motionTarget="@+id/screen_launch_guideline_for_background_image"
                motion:framePosition="100"
                android:scaleX="200" />
            <KeyAttribute
                motion:motionTarget="@+id/screen_launch_guideline_for_background_image"
                motion:framePosition="500"
                android:scaleY="200" />
        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/screen_launch_launch_button" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/screen_launch_launch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginLeft="84dp"
            motion:layout_editor_absoluteY="683dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/screen_launch_launch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            motion:layout_constraintEnd_toEndOf="@+id/screen_launch_app_version_text"
            motion:layout_constraintStart_toStartOf="@id/screen_launch_app_name_text"
            motion:layout_constraintTop_toBottomOf="@id/screen_launch_app_name_text" />
    </ConstraintSet>
</MotionScene>